@model List<Url>
@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg border-0 rounded-lg overflow-hidden">
                <div class="card-body p-4">
                    <h2 class="text-primary text-center mb-4">
                        <i class="fas fa-link me-2"></i>URL Kısaltma Servisi
                    </h2>
                    
                    <form id="urlForm" class="mb-4">
                        <div class="input-group">
                            <input type="url" 
                                   id="originalUrl" 
                                   class="form-control form-control-lg" 
                                   placeholder="URL'nizi buraya yapıştırın"
                                   required>
                            <button class="btn btn-primary btn-lg" type="submit">
                                <i class="fas fa-cut me-2"></i>Kısalt
                            </button>
                        </div>
                    </form>

                    <div id="result" class="alert alert-success d-none fade show">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Kısaltılmış URL:</strong> 
                                <a href="#" id="shortUrl" target="_blank" class="ms-2"></a>
                            </div>
                            <button class="btn btn-sm btn-outline-success" onclick="copyToClipboard()">
                                <i class="fas fa-copy me-1"></i>Kopyala
                            </button>
                        </div>
                    </div>

                    @if (Model != null && Model.Any())
                    {
                        <div class="mt-5">
                            <h3 class="text-primary mb-4">
                                <i class="fas fa-history me-2"></i>Son Kısaltılan URL'ler
                            </h3>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Orijinal URL</th>
                                            <th>Kısa URL</th>
                                            <th>Oluşturma Tarihi</th>
                                            <th>Tıklanma</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var url in Model)
                                        {
                                            <tr>
                                                <td class="text-truncate" style="max-width: 300px;">
                                                    <a href="@url.OriginalUrl" target="_blank" class="text-decoration-none">
                                                        @url.OriginalUrl
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="/Url/RedirectToOriginal?shortUrl=@url.ShortUrl" 
                                                       target="_blank"
                                                       class="badge bg-primary text-decoration-none">
                                                        @url.ShortUrl
                                                    </a>
                                                </td>
                                                <td>@url.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                                <td>
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-click me-1"></i>@url.ClickCount
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-code.js" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $("#urlForm").submit(function (e) {
                e.preventDefault();
                $.post("/Url/Shorten", { originalUrl: $("#originalUrl").val() }, function (data) {
                    $("#result").removeClass("d-none");
                    $("#shortUrl").attr("href", `/Url/RedirectToOriginal?shortUrl=${data.shortUrl}`).text(data.shortUrl);
                });
            });
        });

        function copyToClipboard() {
            var shortUrl = document.getElementById("shortUrl");
            navigator.clipboard.writeText(shortUrl.href).then(function() {
                // Kopyalama başarılı olduğunda bildirim göster
                var button = document.querySelector('#result button');
                var originalText = button.innerHTML;
                button.innerHTML = '<i class="fas fa-check me-1"></i>Kopyalandı';
                setTimeout(function() {
                    button.innerHTML = originalText;
                }, 2000);
            });
        }
    </script>
}
