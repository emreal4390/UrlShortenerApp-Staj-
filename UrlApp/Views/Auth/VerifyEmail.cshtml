<h2>Email Doğrulama</h2>

@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info">
        @TempData["InfoMessage"]
    </div>
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="VerifyEmail" method="post">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" class="form-control" value="@ViewBag.Email" required />
    </div>

    <div class="form-group">
        <label for="code">Doğrulama Kodu</label>
        <input type="text" name="code" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Doğrula</button>
</form>

<div class="mt-3">
    <p>Doğrulama kodu almadınız mı? <a href="javascript:void(0)" onclick="resendCode()">Tekrar Gönder</a></p>
</div> 